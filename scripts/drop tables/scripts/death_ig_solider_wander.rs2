[ai_queue3,death_ig_solider_wander]
gosub(npc_death);
if (npc_findhero = ^false) {
    return;
}
obj_add(npc_coord, npc_param(death_drop), 1, ^lootdrop_duration);

def_int $random = random(128);

if ($random < 1) obj_add(npc_coord, steel_full_helm, 1, ^lootdrop_duration);
else if ($random < 10) obj_add(npc_coord, black_dart, 6, ^lootdrop_duration);
else if ($random < 23) obj_add(npc_coord, black_knife, 6, ^lootdrop_duration);
else if ($random < 25) obj_add(npc_coord, steel_claws, 1, ^lootdrop_duration);
else if ($random < 26) obj_add(npc_coord, black_claws, 1, ^lootdrop_duration);
else if ($random < 27) obj_add(npc_coord, steel_bar, 1, ^lootdrop_duration);
else if ($random < 28) obj_add(npc_coord, mithril_bar, 1, ^lootdrop_duration);
else if ($random < 36) obj_add(npc_coord, ~randomherb, ^lootdrop_duration);
else if ($random < 37) obj_add(npc_coord, bloodrune, 2, ^lootdrop_duration);
else if ($random < 54) obj_add(npc_coord, coins, 3, ^lootdrop_duration);
else if ($random < 64) obj_add(npc_coord, coins, 5, ^lootdrop_duration);
else if ($random < 84) obj_add(npc_coord, coins, 18, ^lootdrop_duration);
else if ($random < 124) obj_add(npc_coord, coins, 50, ^lootdrop_duration);
else if ($random < 126) obj_add(npc_coord, coins, 115, ^lootdrop_duration);
else  obj_add(npc_coord, ~randomjewel, ^lootdrop_duration);