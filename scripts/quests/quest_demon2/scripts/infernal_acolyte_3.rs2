[ai_applayer2,demon2_monk_3]
if (%npc_action_delay > map_clock) {
    return;
}
if(random(5) = 0 & %frozen < map_clock) {
    ~infernal_acolyte_freeze;
    npc_tele(movecoord(npc_coord, 0, 0, -1));
} else {
    ~npc_cast_spell_with_forced_max_hit(^fire_wave, 4, 12);
}

