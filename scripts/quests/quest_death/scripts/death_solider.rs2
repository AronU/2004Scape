// wounded soldier by mountain
[opnpc1,death_ig_solider_wounded]
~chatplayer("<p,confused>Are you OK?");
~chatnpcnoturn("<p,sad>Urrrgggh.....");
~chatnpcnoturn("<p,neutral>I'll be OK, the trolls only leave the plateau at nightfall. The guys are bringing a stretcher shortly.");
~chatplayer("<p,neutral>As long as you're sure.");
~chatnpcnoturn("<p,sad>It's my own fault really, I was having a walk and wandered past the danger sign. The trolls throw rocks down at any one who goes up the path!");
~chatnpcnoturn("<p,shock>Don't go up there!");
~chatplayer("<p,neutral>OK, thanks for the warning.");

[ai_timer,death_ig_solider_wounded]
// static 10t timer
npc_facesquare(movecoord(npc_coord, -7, 0, 0));

