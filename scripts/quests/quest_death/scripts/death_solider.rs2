[opnpc1,death_ig_solider_sitting1] @solider_eating;
[opnpc1,death_ig_solider_sitting2] @solider_eating;
[opnpc1,death_ig_solider_sitting3] @solider_eating;

// drilling soldiers
[ai_timer,death_ig_sergeant_drilling]
def_int $rand = random(3);
def_seq $seq;
if($rand = 0) $seq = human_unarmedpunch;
else if($rand = 1) $seq = human_unarmedkick;
else $seq = human_unarmedblock;
npc_anim($seq, 0);
.npc_findall(npc_coord, death_ig_solider_drilling, 5, 0);
while (.npc_findnext = true) {
    .npc_anim($seq, 40);
    .npc_facesquare(movecoord(.npc_coord, 0, 0, 1));
}

[opnpc1,death_ig_sergeant_drilling] @sergeant_training;
[opnpc1,death_ig_solider_drilling] @solider_training;

// training soldiers
[ai_timer,death_ig_sergeant_training]
if(.npc_find(npc_coord, death_ig_solider_training, 5, 0) = true) {
    npc_facesquare(.npc_coord);
    npc_delay(1);
    switch_int(random(6)) {
        case 0 : npc_say("I want to see you sweat soldier!");
        case 1 : npc_say("Put your back into it soldier!");
        case 2 : npc_say("That dummy is the enemy. Kill it!");
        case 3 : npc_say("Keep it up soldier!");
        case 4 : npc_say("Good work soldier!");
        case 5 : npc_say("You're not out for a sunday stroll soldier!");
        case 6 : npc_say("Work it!");
        case 7 : npc_say("My daughter can hit harder than that!");
        case 8 : npc_say("Push it!");
        case 9 : npc_say("Well done soldier!");
    }
    npc_delay(1);
    .npc_say("Yes sir!");
    .npc_anim(emote_yes, 0);
    npc_settimer(add(20, random(100)));
}

[ai_timer,death_ig_solider_training]
def_int $rand = random(3);
def_seq $seq;
if($rand = 0) $seq = human_unarmedpunch;
else if($rand = 1) $seq = human_unarmedkick;
npc_anim($seq, 0);
npc_settimer(~random_range(4, 6));
npc_facesquare(movecoord(npc_coord, 1, 0, 0));

[opnpc1,death_ig_sergeant_training] @sergeant_training;
[opnpc1,death_ig_solider_training] @solider_training;

