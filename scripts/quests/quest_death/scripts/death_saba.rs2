[opnpc1,death_saba]
switch_int(%death_equiproom) {
    case ^death_complete :
        ~chatplayer("<p,neutral>Hello.");
        ~chatnpc("<p,neutral>Have you got rid of those pesky trolls yet?");
        ~chatplayer("<p,neutral>They will be gone soon! The Imperial Guard will use a secret way that starts from the back of the Sherpa's hut to destroy the troll camp!");
        ~chatnpc("<p,happy>I shall have peace again at last!");
        ~chatnpc("<p,angry>If those pesky humans don't start trampling all over Death Plateau again that is!");
    case default :
        if(~death_get_map >= ^death_spoken_tenzing) {
            ~chatplayer("<p,neutral>Hello.");
            ~chatnpc("<p,neutral>Have you got rid of those pesky trolls yet?");
            ~chatplayer("<p,confused>I'm working on it!");
            ~chatnpc("<p,angry>Grr!");
            return;
        }
        if(~death_get_map = ^death_spoken_saba) {
            ~chatplayer("<p,neutral>Hello.");
            ~chatnpc("<p,neutral>Have you got rid of those pesky trolls yet?");
            ~chatplayer("<p,confused>Where did you say this Sherpa was?");
            ~chatnpc("<p,angry>I dunno but he must live around here somewhere!");
            return;
        }
        ~chatplayer("<p,happy>Hello!");
        ~chatnpc("<p,angry>What?!");
        switch_int(~p_choice3("I'm looking for the guard that was on last night.", 1, "Do you know of another way up Death Plateau?", 2, "Nothing, sorry!", 3)) {
            case 1 :
                ~chatplayer("<p,neutral>I'm looking for the guard that was on last night.");
                ~chatnpc("<p,angry>Who?!");
                ~chatnpc("<p,angry>Buzz off!");
            case 2 :
                ~chatplayer("<p,neutral>Do you know of another way up Death Plateau?");
                ~chatnpc("<p,angry>Why would I want to go up there? I just want to be left in peace!");
                ~chatnpc("<p,angry>It used to be just humans trampling past my cave and making a racket. Now there's those blasted trolls too! Not only do they stink and argue with each other loudly but they are always fighting the humans.");
                ~chatnpc("<p,angry>I just want to be left in peace!");
                ~chatplayer("<p,shifty>Ah... I might be able to help you.");
                ~chatnpc("<p,angry>How?!");
                ~chatplayer("<p,neutral>I'm trying to help the...er...humans to reclaim back Death Plateau. If you help me then at least you'd be rid of the trolls.");
                ~chatnpc("<p,angry>Hmph.");
                ~chatnpc("<p,confused>Let me see...");
                ~chatnpc("<p,neutral>I've only been up Death Plateau once to complain about the noise but those pesky trolls started throwing rocks at me!");
                ~death_set_map(^death_spoken_saba);
                ~chatnpc("<p,neutral>Before the trolls came there used to be a nettlesome Sherpa that took humans exploring or something equally stupid. Perhaps he'd know another way.");
                ~chatplayer("<p,neutral>Where does this Sherpa live?");
                ~chatnpc("<p,angry>I don't know but it can't be far as he used to be around all the time!");
            case 3 :
                ~chatplayer("<p,confused>Nothing, sorry!");
        }
    case ^death_not_started :
        ~chatplayer("<p,happy>Hello!");
        ~chatnpc("<p,angry>Why won't people leave me alone?!");
}