@rantz_hatmenu2;

[label,rantz_hatmenu2]
def_int $op = ~p_choice5_header("Ogre Marksman Hat.", 1, "Marksman Hat.", 2, "Ogre Woodsman Hat.", 3, "Woodsman Hat.", 4, "-- Hat Menu 3 --", 5, "@dbl@*** Hat Menu 2 ***");
while($op ! 5) {
    if($op = 1) {
        ~objbox(cbhat5, "Ogre Marksman hat. 1 Feather Rune. Kills : 95", 250, 0, divide(^objbox_height, 2));
        $op = ~p_choice5_header("Ogre Marksman Hat.", 1, "Marksman Hat.", 2, "Ogre Woodsman Hat.", 3, "Woodsman Hat.", 4, "-- Hat Menu 3 --", 5, "@dbl@*** Hat Menu 2 ***");
